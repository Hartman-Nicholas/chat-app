<html lang="en">

<head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <link rel="stylesheet" href="/css/styles.css">

      <script src="/socket.io/socket.io.js" defer></script>

      <script src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/3.0.1/mustache.min.js" defer></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js" defer></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.6.0/qs.min.js" defer></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.2.0/handlebars.min.js">defer</script>
      <script src="/js/chat.js" defer></script>
      <title>Home Page</title>
</head>

<body>
      <header>{{>header}}</header>
      <h1>Chat App</h1>

      <div id="messages"></div>
      <div id="location"></div>

      <form id="message-form">
            <input name="message" placeholder="Enter text here">
            <button>Send</button>
      </form>
      <script id="message-template" type="text/x-handlebars-template">
            <div>
            <p>\{{message}}</p>
            </div>
      </script>

      <script id="location-template" type="text/x-handlebars-template">
            <div>
           <a href="\{{url}}" target="_blank">My current location</a>
            </div>
      </script>



      <button id="send-location">Send Location</button>



      <footer>{{>footer}}</footer>

</body>

</html>